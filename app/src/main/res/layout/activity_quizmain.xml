<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuizmainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="천안의 이해 "
        android:textSize="30dp"
        android:layout_weight="10"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="천안퀴즈! GO!GO! "
        android:textSize="45dp"
        android:gravity="center"
        android:layout_weight="20"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="우리 자랑 천안의 관광지에 관련된 총 3개의 퀴즈를 맞추고 자신의 천안 인싸력을증명하세요! 분비됬으면 GO!GO!"
        android:textSize="25dp"
        android:layout_weight="30"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"

        />

    <ImageView
        android:id="@+id/qzstart_btn"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/button_start1"
        android:layout_weight="50"
        android:layout_gravity="center"
        android:onClick="qzstart"
        />




</LinearLayout>