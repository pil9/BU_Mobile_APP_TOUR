<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinActivity"
    android:orientation="vertical">
    <bu.mobile.app.tour.SmoothBackgroundView
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="40sp"
                android:layout_gravity="center"
                android:src="@drawable/cheon" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"

                    android:layout_marginTop="10sp"
                    android:layout_weight="0"
                    android:text="랜드마크 in"
                    android:fontFamily="@font/wandohope"
                    android:textColor="#000000"
                    android:textSize="45sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10sp"
                    android:layout_weight="0"
                    android:text=" 천"
                    android:fontFamily="@font/wandohope"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="55sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10sp"
                    android:layout_weight="0"
                    android:fontFamily="@font/wandohope"
                    android:text="안"

                    android:textColor="#000000"
                    android:textSize="50sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <EditText
                android:id="@+id/idText"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10sp"
                android:layout_weight="0"
                android:background="@drawable/edit_background"
                android:drawableStart="@drawable/ic_baseline_person_24"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:hint=" 아이디"
                android:inputType="textPersonName"
                android:padding="13dp"
                android:shadowColor="#FFFFFF" />

            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/edit_background"
                android:drawableStart="@drawable/ic_baseline_https_24"
                android:drawableLeft="@drawable/ic_baseline_https_24"
                android:layout_marginBottom="10sp"
                android:padding="13dp"
                android:hint=" 패스워드"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/editTextPasswordRe"
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/edit_background"

                android:drawableLeft="@drawable/ic_baseline_https_24"
                android:layout_marginBottom="10sp"
                android:padding="13dp"
                android:hint=" 패스워드 재입력"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="250dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/edit_background"
                android:drawableLeft="@drawable/ic_baseline_assignment_ind_24"
                android:layout_marginBottom="10sp"
                android:padding="13dp"
                android:hint=" 이름"
                android:inputType="textPersonName" />



            <Button
                android:id="@+id/reg_button"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:layout_marginTop="10dp"
                android:background="@drawable/button"
                android:text="회원가입"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:onClick="members"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="모바일 프로그래밍 수업 5조의 작품"
                android:layout_marginTop="50dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>